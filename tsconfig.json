{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "./**/*.ts",
    "./**/*.js",
    "./.*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "@tsconfig/react-native/tsconfig.json"
}